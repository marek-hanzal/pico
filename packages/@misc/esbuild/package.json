{
	"version": "2.0.0",
	"name": "@use-pico/esbuild",
	"description": "Esbuild helper stuff.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/use-pico2/pico.git"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"sideEffects": false,
	"type": "module",
	"main": "lib/index.js",
	"module": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": [
		"lib",
		"src"
	],
	"scripts": {
		"init": "concurrently npm:init:*",
		"init:esbuild": "node esbuild.mjs",
		"init:types": "tsc --outDir lib",
		"lint": "eslint src",
		"cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
	},
	"dependencies": {
		"esbuild": "^0.18.15",
		"esbuild-css-modules-plugin": "^3.0.3",
		"glob": "^10.3.3"
	},
	"devDependencies": {
		"@use-pico/eslint-config-eslint": "^2.0.0",
		"@use-pico/tsconfig": "^2.0.0",
		"@types/glob": "^8.1.0",
		"@types/node": "^20.4.2",
		"concurrently": "^8.2.0",
		"del-cli": "^5.0.0",
		"eslint": "^8.45.0",
		"typescript": "^5.2.2"
	},
	"bugs": {
		"url": "https://github.com/use-pico2/pico/issues"
	},
	"homepage": "https://github.com/use-pico2/pico#readme"
}
