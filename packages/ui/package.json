		"@use-pico/esbuild": "^1.0.2",
		"@use-pico/eslint-config-eslint": "^1.0.2",
		"@use-pico/tsconfig": "^1.0.2",
		"@types/node": "^20.4.2",
		"@types/react": "^18.2.15",
		"@types/uuid": "^9.0.2",
		"concurrently": "^8.2.0",
		"del-cli": "^5.0.0",
		"eslint": "^8.45.0",
		"typescript": "^5.2.2"
	},
	"bugs": {
		"url": "https://github.com/leight-core/viv/issues"
	},
	"homepage": "https://github.com/leight-core/viv#readme"
