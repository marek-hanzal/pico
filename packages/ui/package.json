		"@mantine/notifications": "^7.0.0",
		"@mantine/nprogress": "^7.0.0",
		"@mantine/spotlight": "^7.0.0",
		"@use-pico/i18n": "^1.0.2",
		"@use-pico/navigation": "^1.0.2",
		"@use-pico/query": "^1.0.2",
		"@use-pico/store": "^1.0.2",
		"@use-pico/utils": "^1.0.2",
		"@tabler/icons-react": "^2.39.0",
		"axios": "^1.4.0",
		"next": "^13.5.4",
